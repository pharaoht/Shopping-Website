<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CmsShoppingCart</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <div class="navbar-header">
                <button class="btn btn-primary" type="button">@Html.ActionLink("Dashboard", "Index", "Dashboard", new { area = "" }, new { @class = "navbar-brand" })</button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <button class="btn btn-primary" type="button">@Html.ActionLink("Home", "PagesMenuPartial", "Pages")</button>
                    </li>
                    <li>
                        <button class="btn btn-primary" type="button">@Html.ActionLink("Categories", "CategoryMenuPartial", "Shop")</button>
                    </li>
                    <li>
                        <button class="btn btn-primary" type="button">@Html.ActionLink("Products", "Products", "Shop")</button>
                    </li>
                    <li>
                        <button class="btn btn-primary" type="button">@Html.ActionLink("SideBar", "EditSidebar", "Pages")</button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
                <ul class="nav navbar-nav">
                    @Html.Action("PagesMenuPartial", "Pages")
                </ul>

<div class="container body-content">
    
    <div class="col-xs-12 col-md-2">
        @Html.Action("CategoryMenuPartial", "Shop")
    </div>
    
    

    <div class="row">

        @if (ViewBag.Sidebar == "Yes")
        {
            <div class="col-xs-12 col-md-7">
                @RenderBody()
            </div>
            <div class="col-xs-12 col-md-3">
                @Html.Action("SidebarPartial", "Pages")
            </div>
        }
        else
        {
            <div class="col-xs-12 col-md-10"> @RenderBody()</div>
        }
    </div>
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/scripts")

    @RenderSection("scripts", required: false)
</body>
</html>
