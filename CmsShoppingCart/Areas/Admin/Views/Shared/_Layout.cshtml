<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Area</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <div class="navbar-header">
            <button class="btn btn-primary" type="button">@Html.ActionLink("Dashboard", "Index", "Dashboard", new {area = ""}, new {@class = "navbar-brand"})</button>

        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>
                    <button class="btn btn-primary" type="button">@Html.ActionLink("Pages", "Index", "Pages")</button>
                </li>
                <li>
                    <button class="btn btn-primary" type="button">@Html.ActionLink("Categories", "Categories", "Shop")</button>
                </li>
                <li>
                    <button class="btn btn-primary" type="button">@Html.ActionLink("Products", "Products", "Shop")</button>
                </li>
                <li>
                    <button class="btn btn-primary" type="button">@Html.ActionLink("SideBar", "EditSidebar", "Pages")</button>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr />
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>

